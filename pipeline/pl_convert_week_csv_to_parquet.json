{
	"name": "pl_convert_week_csv_to_parquet",
	"properties": {
		"activities": [
			{
				"name": "GM_ListYears",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "ds_adls_path",
						"type": "DatasetReference",
						"parameters": {
							"FolderPath": "@pipeline().parameters.p_inRoot"
						}
					},
					"fieldList": [],
					"storeSettings": {
						"type": "AzureBlobStorageReadSettings",
						"enablePartitionDiscovery": false
					},
					"formatSettings": {
						"type": "BinaryReadSettings"
					}
				}
			},
			{
				"name": "Filter_Years",
				"type": "Filter",
				"dependsOn": [
					{
						"activity": "GM_ListYears",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('GM_ListYears').output.childItems",
						"type": "Expression"
					},
					"condition": {
						"value": "@startsWith(item().name, 'year=')",
						"type": "Expression"
					}
				}
			},
			{
				"name": "ForEach1",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "Filter_Years",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('Filter_Years').output.value\n",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "GM_ListFilesInYear",
							"type": "GetMetadata",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "ds_adls_path",
									"type": "DatasetReference",
									"parameters": {
										"FolderPath": "@concat(pipeline().parameters.p_inRoot, '/', item().name)"
									}
								},
								"fieldList": [],
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "BinaryReadSettings"
								}
							}
						},
						{
							"name": "Filter_WeekCsv",
							"type": "Filter",
							"dependsOn": [
								{
									"activity": "GM_ListFilesInYear",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"items": {
									"value": "@activity('GM_ListFilesInYear').output.childItems",
									"type": "Expression"
								},
								"condition": {
									"value": "@and(   startsWith(item().name, 'export_week_'),   endsWith(item().name, '.csv') )",
									"type": "Expression"
								}
							}
						}
					]
				}
			},
			{
				"name": "GM_TargetExists",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "ForEach1",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"activities": [
						{
							"name": "Get Metadata1",
							"type": "GetMetadata",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": []
						}
					]
				}
			}
		],
		"parameters": {
			"p_inRoot": {
				"type": "string",
				"defaultValue": "staging/StatistiekenCSV"
			},
			"p_outRoot": {
				"type": "string",
				"defaultValue": "staging/final"
			}
		},
		"annotations": []
	}
}